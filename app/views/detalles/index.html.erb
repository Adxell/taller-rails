<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"> </script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="container">
<br>
<p id="notice"><%= notice %></p>
<h1>Detalles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Prestamo</th>
      <th>Libro</th>
      <th>Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @detalles.each do |detalle| %>
      <tr>
        <td><%= detalle.cantidad %></td>
        <td><%= detalle.prestamo.id.to_s+"-"+detalle.prestamo.usuario.nombres %></td>
        <td><%= detalle.libro.titulo %></td>
        <td><%= link_to 'Show', detalle, :class => "btn btn-info", style: "color:#fff" %>
        <%= link_to 'Destroy', detalle, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", style: "color:#fff"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ver prestamos', prestamos_path, :class => "btn btn-info", :style => "color:#fff" %>

</div>
