<div class="container">
<%= form_with(model: multum, local: true) do |form| %>
  <% if multum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(multum.errors.count, "error") %> prohibited this multum from being saved:</h2>

      <ul>
      <% multum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :valor %>
    <%= form.text_field :valor %>
  </div>

  <div class="field">
    <%= form.label :fecha %>
    <%= form.date_select :fecha %>
  </div>

  <div class="field">
    <%= form.label :estado %>
    <%= form.select :estado, [["pendiente", "PENDIENTE"], ["pagado","PAGADO"]] %>
  </div>

  <div class="field">
    <%= form.label :prestamo_id %>
    <%= form.number_field :prestamo_id, value: Prestamo.where("id = #{params[:prestamo_id]}").ids %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
