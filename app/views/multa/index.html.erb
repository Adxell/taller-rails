<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"> </script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="container">
<p id="notice"><%= notice %></p>

<h1>Multa</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Valor</th>
      <th>Fecha</th>
      <th>Estado</th>
      <th>Prestamo</th>
      <th>Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @multa.each do |multum| %>
      <tr>
        <td><%= multum.valor %></td>
        <td><%= multum.fecha %></td>
        <td><%= multum.estado %></td>
        <td><%= multum.prestamo.id.to_s+" - "+multum.prestamo.usuario.nombres %></td>
        <td><%= link_to 'Show', multum, :class => "btn  btn-info", :style => "color:#fff" %>
        <%= link_to 'Destroy', multum, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn  btn-danger", :style => "color:#fff" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Prestamos', prestamos_path, :class => "btn  btn-primary", :style => "color:#fff"  %>
</div>